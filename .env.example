# Neuro Pulse Configuration
# Copy this file to .env and configure with actual values

# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
API_VERSION=v1

# Solana Network Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
SOLANA_WS_ENDPOINT=wss://api.mainnet-beta.solana.com
COMMITMENT_LEVEL=confirmed
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Wallet Configuration
WALLET_PRIVATE_KEY=
WALLET_PUBLIC_KEY=
MONITORING_WALLET_ADDRESSES=

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/neuropulse
REDIS_URL=redis://localhost:6379
MONGO_URI=mongodb://localhost:27017/neuropulse
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=5000

# AI Model Configuration
AI_MODEL_PATH=/models/neural_predictor_v2.onnx
AI_INFERENCE_ENDPOINT=http://localhost:8001/inference
AI_TRAINING_ENDPOINT=http://localhost:8002/train
MODEL_VERSION=2.1.0
CONFIDENCE_THRESHOLD=0.85
PREDICTION_WINDOW_MS=300000

# Neural Network Parameters
LSTM_UNITS=256
ATTENTION_HEADS=8
DROPOUT_RATE=0.2
LEARNING_RATE=0.001
BATCH_SIZE=32
EPOCHS=100

# Signal Processing
SIGNAL_SAMPLE_RATE=1000
SIGNAL_WINDOW_SIZE=60
SIGNAL_OVERLAP_RATIO=0.5
FFT_POINTS=512
WAVELET_TYPE=db4

# WebSocket Configuration
WS_PORT=8080
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_MESSAGE_RATE_LIMIT=100

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Security
JWT_SECRET=
JWT_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d
API_KEY=
ENCRYPTION_KEY=
SALT_ROUNDS=10

# Monitoring and Analytics
SENTRY_DSN=
DATADOG_API_KEY=
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3001

# External Services
COINGECKO_API_KEY=
COINMARKETCAP_API_KEY=
BIRDEYE_API_KEY=
HELIUS_API_KEY=

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600
CACHE_MAX_KEYS=10000

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_JOBS=1000
QUEUE_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_AI_PREDICTIONS=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_HISTORICAL_ANALYSIS=true
ENABLE_PATTERN_RECOGNITION=true
ENABLE_ANOMALY_DETECTION=true

# Performance Tuning
MAX_CONCURRENT_RPC_CALLS=10
TRANSACTION_BATCH_SIZE=100
MEMORY_LIMIT_MB=2048
CPU_THRESHOLD_PERCENT=80

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_CHANNELS=webhook,email,telegram
WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
